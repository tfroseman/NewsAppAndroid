<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.newsappandroid.activities.RegisterActivity"
    android:id="@+id/register"
    android:labelFor="@id/user_email"
    android:theme="@style/AppTheme"
    android:background="#ecf0f1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/user_email"
        android:hint="user@site.com"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="71dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="5dp"
        style="@style/AppTheme.TextBox" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_password"
        android:hint="password"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/user_email"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:layout_marginBottom="5dp"
        style="@style/AppTheme.TextBox" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_password_verify"
        android:hint="password "
        android:layout_below="@+id/user_password"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:layout_marginBottom="5dp"
        style="@style/AppTheme.TextBox" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:onClick="registerAccount"
        android:theme="@style/AppTheme.Button.Register"
        style="@style/AppTheme.Button.Register" />

</RelativeLayout>
