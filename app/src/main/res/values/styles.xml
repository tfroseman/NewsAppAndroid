<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
    <!-- Customize your theme here. -->
        <item name="android:background">#ecf0f1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Button.Login">
        <item name="android:background">#27AE60</item>
    </style>

    <style name="AppTheme.Button.Register">
        <item name="android:background">#E74C3C</item>
    </style>

    <style name="AppTheme.TextBox">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>

